{
	"buildCommand": "yarn generate && vite build",
	"outputDirectory": "dist",
	"installCommand": "yarn install",
	"framework": "vite",
	"rewrites": [
		{
			"source": "/api/(.*)",
			"destination": "/api/serverless.ts"
		},
		{
			"source": "/(.*)",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				}
			]
		}
	]
}